<Window x:Class="AnimalShelter.NewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimalShelter"
        mc:Ignorable="d"
        Title="YENİ KULLANICI" Height="500" Width="500"
        Background="LightGoldenrodYellow">
    <StackPanel>
        <Label Content="Ad" Margin="0,50,0,0"/>
        <TextBox Name="txtName" Text="" TextWrapping="Wrap"/>
        <Label Content="Soyad"/>
        <TextBox Name="txtSurname" Text="" TextWrapping="Wrap"/>
        <Label Content="Kullanıcı Adı"/>
        <TextBox Name="txtUserName" Text="" TextWrapping="Wrap"/>
        <Label Content="Parola"/>
        <PasswordBox Name="txtUserPassword" PasswordChar="*" />
        <Label Content="Parola Tekrar"/>
        <PasswordBox Name="txtUserPasswordRepeat" PasswordChar="*" />

        <Button Content="Ekle" Name="btnAdd" Click="btnAdd_Click" Background="LightGreen" Margin="5"/>
        <Button Content="Geri Dön" Name="btnCancel" Click="btnCancel_Click" Background="LightBlue" Margin="5"/>
    </StackPanel>
</Window>
